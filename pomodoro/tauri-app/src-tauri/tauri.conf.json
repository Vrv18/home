{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Break Sanctuary",
  "version": "0.1.3",
  "identifier": "com.pomodoro.native",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Break Sanctuary",
        "width": 800,
        "height": 600,
        "visible": false,
        "fullscreen": false,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "label": "stats",
        "title": "Focus Stats",
        "width": 400,
        "height": 600,
        "url": "stats.html",
        "visible": false,
        "resizable": false,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}